<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tabBackground_selected"
    android:orientation="vertical"
    android:scrollbarAlwaysDrawVerticalTrack="true">


    <Button
        android:id="@+id/btnjasoucadastro"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="8dp"
        android:layout_marginBottom="11dp"
        android:background="@null"
        android:text="Já sou Cadastrado"
        android:textAllCaps="false"
        android:textColor="@color/tabTitle" />

    <Button
        android:id="@+id/btnSouCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="140dp"
        android:background="@null"
        android:drawableLeft="@mipmap/price_img"
        android:text="Quero Receber Promoções"
        android:textColor="@color/tabTitle" />

    <Button
        android:id="@+id/btnSouEmpresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="219dp"
        android:background="@null"
        android:drawableLeft="@mipmap/megaphone_img"
        android:text="Quero Anunciar Produtos"
        android:textColor="@color/tabTitle" />
</RelativeLayout>
